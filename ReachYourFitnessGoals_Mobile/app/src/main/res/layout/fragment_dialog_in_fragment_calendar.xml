<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/default_padding"
    tools:context="com.finalproject.reachyourfitnessgoals.fragment.fragment_dialog_inFragment_calendar">

    <Button
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="0.5"
        android:background="@color/colorBlack"
        android:layout_marginRight="5dp"
        android:text="@string/customSelect"
        android:textColor="@color/colorWhite"
        android:id="@+id/customSetExe_Button_dialog"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="0.5"
        android:background="@color/colorBlack"
        android:text="@string/autoSelect"
        android:textColor="@color/colorWhite"
        android:id="@+id/autoSetExe_Button_dialog"/>

</LinearLayout>
