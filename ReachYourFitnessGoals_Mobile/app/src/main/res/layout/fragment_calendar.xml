<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.finalproject.reachyourfitnessgoals.fragment.fragment_calendar">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/datePicker_DatePicker_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mcv_selectionColor="#00F"
            app:mcv_tileSize="match_parent"
             />

    </RelativeLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/layout_fragment_calendar"
        android:name="com.finalproject.reachyourfitnessgoals.fragment.fragment_detail"
        tools:layout="@layout/fragment_detail">

        <ScrollView
            android:id="@+id/SV_ScroolView_calendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

        </ScrollView>

    </fragment>


</LinearLayout>
